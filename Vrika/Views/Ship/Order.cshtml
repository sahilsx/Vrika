<div class="body">
    <div class="REQ">
        <h2>MY ORDERS</h2>
        <div class="card-container">
            @foreach (var Shipping in Model)
            {
                <div class="order-card">
                    <div class="order-card-body">
                        <h5 class="order-card-title">Order ID: @Shipping.Productid</h5>
                        <p><strong>Name:</strong> @Shipping.fullname</p>
                        <p><strong>Address:</strong> @Shipping.address</p>
                        <p><strong>Email:</strong> @Shipping.email</p>
                        <p><strong>Phone:</strong> @Shipping.Phone</p>
                        <p><strong>City:</strong> @Shipping.city</p>
                        <a class="btn btn-danger" asp-controller="Ship" asp-action="Sdelete" asp-route-id="@Shipping.Id">
                            CANCEL ORDER
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .body {
        margin: 20px auto;
        padding: 10px;
    }

    .REQ {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        background-color: #f9f9f9;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .order-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        width: 100%;
        max-width: 350px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .order-card:hover {
        transform: translateY(-5px);
    }

    .order-card-body {
        padding: 15px;
    }

    .order-card-title {
        font-size: 1.2rem;
        color: #007bff;
        margin-bottom: 10px;
    }

    .order-card p {
        margin: 5px 0;
        font-size: 0.9rem;
        color: #333;
    }

    .btn {
        display: block;
        width: 100%;
        padding: 8px;
        text-align: center;
        border-radius: 3px;
        cursor: pointer;
        margin-top: 10px;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

    .btn:hover {
        opacity: 0.8;
    }

    .ftx {
        display: none;
    }

    /* Responsive Design */
    
</style>
