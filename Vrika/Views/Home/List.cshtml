@{
}
<div class="body">
    <div class="REQ">
        <h2>Book List</h2>
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>B.No</th>
                        <th>Book Name</th>
                        <th>Book Price</th>
                        <th>Author</th>
                        <th>Genre</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Books in Model)
                    {
                        <tr>
                            <td>@Books.Id</td>
                            <td>@Books.BookName</td>
                            <td>@Books.BookPrice</td>
                            <td>@Books.Author</td>
                            <td>@Books.Genre</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@Books.Id">Edit Book</a>
                                <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@Books.Id">Delete Book</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .body {
        margin: 0 auto;
        padding: 10px;
        width: 100%;
        min-height: 90vh;
    }

    .REQ {
        width: 95%;
        max-width: 1200px;
        margin: 20px auto;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
    }

    h2 {
        margin-bottom: 20px;
        text-align: center;
        color: #333;
    }

    .table-responsive {
        overflow-x: auto;
        width: 100%;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
    }

    .table th, .table td {
        padding: 12px;
        text-align: left;
        vertical-align: middle;
        border: 1px solid #ddd;
        font-size: 14px;
    }

    .table-hover tbody tr:hover {
        background-color: #f2f2f2;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 6px 12px;
        border-radius: 3px;
        font-size: 12px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 6px 12px;
        border-radius: 3px;
        font-size: 12px;
        transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    /* Responsive Design */
    
</style>
