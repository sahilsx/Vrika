@model Books;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

<div class="buy">
    @if (signInManager.IsSignedIn(User)) {
    <div class="table1">
        <h2 class="order">Place Your Order Now!</h2>
        <p>Are you sure you want to buy the Book?</p>
        <input type="hidden" for="Id" />
        <table class="responsive-table">
            <tr>
                
                <td><img class="hmimgx" src="@Model.Url" alt="Book Image"></td>
            </tr>
            <tr>
                <th>Product-Id</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Book Name</th>
                <td>@Model.BookName</td>
            </tr>
            <tr>
                <th>Book Price</th>
                <td>@Model.BookPrice</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>@Model.Author</td>
            </tr>
            <tr>
                <th>Book Genre</th>
                <td>@Model.Genre</td>
            </tr>
        </table>

        <a asp-controller="Ship" asp-action="Ship" class="btn btn-primary">Buy</a>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
    }
    else {
    <div class="p">
        <p class="b">BEFORE BUYING SOMETHING YOU NEED TO BE LOGGED IN!</p>
    </div>
    <a class="btn btn-primary bt" asp-area="" asp-controller="Register" asp-action="Login">LOGIN</a>
    }
</div>

<style>
    /* Container Styling */
    .buy {
        width: 100vw;
        height: 120vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f4f4f4;
        padding: 20px;
    }

    .table1 {
        max-width: 800px;
        width: 90%;
      margin:0px auto;

        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        padding: 20px;
        background-color: white;
    }

    .order {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 900;
        text-align: center;
        margin-bottom: 20px;
    }

    .p {
        text-align: center;
        margin-top: 100px;
    }

    /* Table Styling */
    .responsive-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 16px;
    }

    .responsive-table th,
    .responsive-table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .responsive-table th {
        background-color: #f7f7f7;
        font-weight: 700;
    }

    .hmimgx {
        width: 100%;
        max-width: 400px;
        height: 150px;
        display: block;
        margin-left: 10px;
    }

    .btn {
        display: inline;
        width: 100%;
        max-width: 200px;
        margin: 20px auto;
        padding: 10px;
        text-align: center;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

   
</style>
