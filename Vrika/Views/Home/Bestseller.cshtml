<div>

    <h1>
        BEST SELLER



    </h1>





</div>
<div class="cardscnt">
    @foreach (var Books in Model)
    {
        <div class="card">
            <img class="imgx" src=@Books.Url alt="Avatar">
            <div class="container">

                <p class="para">@Books.BookName</p>
                <p>@Books.Genre</p>
                <p>@Books.Author</p>
                <a class="price" asp-area="" asp-page="/about">$ @Books.BookPrice</a>
                <a class="btn btn-primary" asp-controller="Home"
                   asp-action="Buy" asp-route-id="@Books.Id">
                    buy
                </a>

            </div>
        </div>
    }
</div>
<style>


    .cardscnt {
        width: 95%;
        margin: 120px auto;
        border-top: 2px solid pink;
        flex-wrap: wrap;
        display: flex;
        border-bottom: 2px solid pink;
    }



    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        border-radius: 5px;
        padding: 10px;
        background-color: transparent;
        width: 22.5%;
        height: 490px;
        cursor: pointer;
        margin: 5% 5%;
    }

        .card:hover {
            transform: skew(5deg)
        }

    .container {
        padding-bottom: 10px;
        text-align: center;
        margin: 10px auto;
    }

    .imgx {
        width: 100%;
        height: 250px;
        margin-bottom: 30px;
        border-radius: 5px 5px 0 0;
    }



    .btn btn-primary {
        text-decoration: none;
        color: black;
        font-weight: 550;
        font-size: larger;
        font-family: sans-serif;
        background-color: lightpink;
        padding: 2px 5px;
        display: none;
    }

    .para {
        color: black;
        font-weight: 550;
        font-size: larger;
        font-family: sans-serif;
    }

    .card:hover .container a {
        display: block;
    }

    .see {
        display: flex;
        margin-left: 45%;
        font-size: 22px;
        font-weight: 800;
        color: black;
        cursor: pointer;
        margin-bottom: 10px;
    }

    h1 {
        margin: 40px auto;
        margin-bottom: 0px;
        justify-content: center;
        align-items: center;
        display: flex;
        font-family: sans-serif;
        font-style: italic;
    }
</style>